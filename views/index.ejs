<%- include("partials/header.ejs") %>

    <form action="/submit" method="post" id="search" class="search">
        <input type="text" placeholder="Hero Man" id="search" name="searchName">
        <input type="submit" value="Search" id="search-btn">
    </form>

    <%if(locals.data){%>
        <div class="container">
            <div class="card__container">
                <article class="card__article">
                    <img src="<%=details.image.url%>" alt="<%=details.name%>" class="card__img">
                    <div class="card__data">
                        <span class="card__description"><%=details.name%></span>
                        <h2>Powerstats</h2>
                        <ul>
                            <li>Intelligence: <%=details.powerstats.intelligence%></li>
                            <li>Strength: <%=details.powerstats.strength%></li>
                            <li>Speed: <%=details.powerstats.speed%></li>
                            <li>Durability: <%=details.powerstats.durability%></li>
                            <li>Power: <%=details.powerstats.power%></li>
                            <li>Combat: <%=details.powerstats.combat%></li>
                        </ul>
                    </div>
                </article>
            </div>
        </div>
        
    <%}else if(!locals.data){%>
        <iframe src="https://giphy.com/embed/xUStFKHmuFPYk" width="480" height="274" style="" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/giphyqa-xUStFKHmuFPYk">via GIPHY</a></p>
        <h1>Hero not found</h1>
    <%}else{%>
        <p>Find a hero</p>
    <%}%>  

    <button formaction="/generate" id="generate">Get a Hero</button>

<%- include("partials/footer.ejs") %>